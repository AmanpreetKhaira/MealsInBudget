        function UpdateCount(id) {
            $.ajax({
                url: '/Home/UpdateCount',
                type: "GET",
                dataType: "JSON",
                data: { RecipeID: id },
                success: function (result) {
                    //$("#DCid_" + id).html(result);
                }
            });
        }
    </script>
}